    <div class="box col-1-3 row-1-3">
         <iframe style="width: 100%; height: 100%;" src="{{post.get_field('video')}}" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="box col-1-3 row-1-3">
        Twitter
    </div>
</section>
