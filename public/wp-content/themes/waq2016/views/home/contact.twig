<section class="panel clearfix">
    <div class="box col-1-3 row-1-1">
        <h2>Contact</h2>

        {% if restos %}
            <h3>Restaurants</h3>
            <ul>
                {% for resto in restos %}
                    <li>{{resto.get_field('emplacement')|distance}}km _ {{resto.post_title}} _ {{resto.get_field('informations')}}</li>
                {% endfor %}
            </ul>
        {% endif %}

        {% if hotels %}
            <h3>HÃ´tels</h3>
            <ul>
                {% for hotel in hotels %}
                    <li>{{hotel.get_field('emplacement')|distance}}km _ {{hotel.post_title}} _ {{hotel.get_field('informations')}}</li>
                {% endfor %}
            </ul>
        {% endif %}

        {% if parkings %}
            <h3>Stationnements</h3>
            <ul>
                {% for parking in parkings %}
                    <li>{{parking.get_field('emplacement')|distance}}km _ {{parking.post_title}} _ {{parking.get_field('informations')}}</li>
                {% endfor %}
            </ul>
        {% endif %}

        {% if shops %}
            <h3>Magasins</h3>
            <ul>
                {% for shop in shops %}
                    <li>{{shop.get_field('emplacement')|distance}}km _ {{shop.post_title}} _ {{shop.get_field('informations')}}</li>
                {% endfor %}
            </ul>
        {% endif %}

    </div>
    <div class="box col-2-3 row-1-1">
        <div class="box col-1-1 row-2-3">
            Maps
        </div>
        <div class="box col-1-1 row-1-3">
            <div class="box col-1-2 row-1-1">
                {{post.get_field('social')}}
            </div>
            <div class="box col-1-2 row-1-1">
                {{post.get_field('infos')}}
            </div>
        </div>
    </div>
</section>
